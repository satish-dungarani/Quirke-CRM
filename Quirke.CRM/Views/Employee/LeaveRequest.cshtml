@{
    ViewData["Title"] = "Leave Requests";
}
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>


<section class="content pt-3">
    <div class="container-fluid">
        <div class="card card-default color-palette-box">
            <div class="card-header">
                <h1 class="card-title">
                    Leave Requests
                </h1>
                <button class="btn btn-primary btn-sm float-right" onclick="funManageRequest(null)"><i class="fas fa-plus"></i> Request For Leave</button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="requestsTable" class="table table-striped table-bordered" style="width:100%">
                        <thead class="thead-dark">
                            <tr>
                                <th>Sr No.</th>
                                <th>Employee</th>
                                <th>Leave Type</th>
                                <th>Duration</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Requested Date</th>
                                <th>Updated Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="commonModalCenter" tabindex="-1" role="dialog" aria-labelledby="commonModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commonModalCenterTitle">Create Request</h5>
                <button type="button" class="close" aria-label="Close" onclick="funCloseModal();">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="divCommonModel"></div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

<script>

    var myModal = new bootstrap.Modal(document.getElementById('commonModalCenter'));
    var dtTable;
    $(document).ready(function () {
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            Swal.fire({
                title: 'Success!',
                text: successMessage,
                icon: 'success',
                confirmButtonText: 'OK'
            });
        };
        var warningMessage = '@TempData["WarningMessage"]';
        if (warningMessage) {
            Swal.fire({
                title: 'WarningMessage!',
                text: warningMessage,
                icon: 'warning',
                confirmButtonText: 'OK'
            });
        };

        funGridRequest();

        $(window).resize(() => {
            setTimeout(function () {
                $($.fn.dataTable.tables(true)).DataTable().columns.adjust();
            }, 200);
        });
    });
    
    function funGridRequest() {
        if (dtTable) {
            dtTable.destroy();
        }
        dtTable = $('#requestsTable').DataTable({
            "processing": true,
            "serverSide": false,
            "ajax": {
                "url": "@Url.Action("GetLeaveRequests", "Employee")",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                {
                    "data": null,
                    "className": "text-center",
                    "render": function (data, type, full, meta) {
                        return meta.row + 1;
                    }
                },
                { "data": "EmployeeName" },
                { "data": "LeaveType" },
                { "data": "LeaveDuration" },
                {
                    "data": "StartDate",
                    "render": function (data) {
                        return moment(data).format('MM/DD/YYYY');
                    }
                },
                {
                    "data": "EndDate",
                    "render": function (data) {
                        return moment(data).format('MM/DD/YYYY');
                    }
                },
                {
                    "data": null,
                    "className": "text-center noExport",
                    "render": function (data, type, full, meta) {

                        if (full.RequestStatus == "Pending") {
                            return '<span class="badge badge-warning">' + full.RequestStatus + '</span>';
                        } else if (full.RequestStatus == "Approved") {
                            return '<span class="badge badge-success">' + full.RequestStatus + '</span>';
                        } else if (full.RequestStatus == "Rejected") {
                            return '<span class="badge badge-danger">' + full.RequestStatus + '</span>';
                        } else {
                            return '<span class="badge badge-primary">' + full.RequestStatus + '</span>';
                        }
                    }
                },
                {
                    "data": "CreatedOn",
                    "render": function (data) {
                        return moment(data).format('MM/DD/YYYY');
                    }
                },
                {
                    "data": "UpdatedOn",
                    "render": function (data) {
                        return moment(data).format('MM/DD/YYYY');
                    }
                },
                {
                    "render": function (data, type, full, meta) {
                        return '<button class="btn btn-secondary btn-sm mr-2" onclick="funManageRequest(' + full.Id + ')" ><i class="fas fa-pen"></i> Edit</button>' +
                            '<button class="btn btn-info btn-sm mr-2" onclick="funViewRequest(' + full.Id + ')" ><i class="fas fa-eye"></i> View</button>' +
                            '<button class="btn btn-danger btn-sm" onclick="funDeleteRequest(' + full.Id + ')" ><i class="fas fa-trash"></i> Delete</button>';
                    }
                }
            ],
            fixedHeader: true,
            responsive: true,
            scrollCollapse: true,
            scrollY: '50vh',
            scrollX: true,
            deferRender: true,
            scroller: true,
            autoWidth: true,
            layout: {
                topStart: {
                    buttons: [
                        {
                            extend: 'excel',
                            className: 'btn btn-outline-dark btn-sm',
                            exportOptions: {
                                columns: ':not(:last-child)'
                            }
                        },
                        {
                            extend: 'pdf',
                            className: 'btn btn-outline-dark btn-sm',
                            exportOptions: {
                                columns: ':not(:last-child)'
                            }
                        }
                    ]
                },
                bottom: ['paging'],
                bottomStart: null,
                bottomEnd: null,
            }
        });
    }

    function funManageRequest(_id) {

        $.ajax({
            url: '@Url.Action("ManageRequest", "Employee")',
            type: 'GET',
            dataType: 'html',
            data: {
                id: _id,
            },
            success: function (data) {

                $("#divCommonModel").html('');
                $("#divCommonModel").html(data);
                // $("#commonModalCenter").modal('show');
                myModal.show();
            },
            error: function (error) {
            }
        });
    };

    function funViewRequest(_id) {

        $.ajax({
            url: '@Url.Action("ViewRequest", "Employee")',
            type: 'GET',
            dataType: 'html',
            data: {
                id: _id,
            },
            success: function (data) {
                $("#divCommonModel").html('');
                $("#divCommonModel").html(data);
                myModal.show();
            },
            error: function (error) {
            }
        });
    }

    function funDeleteRequest(_id) {

        $.ajax({
            url: '@Url.Action("DeleteRequest", "Employee")',
            type: 'GET',
            dataType: 'json',
            data: {
                id: _id,
            },
            success: function (response) {
                if (response.result) {
                    funGridRequest();
                    Swal.fire({
                        title: 'Success!',
                        text: response.msg,
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
                }
            },
            error: function (response) {

            }
        });
    }

    function funCloseModal() {
        myModal.hide();
    };

</script>
