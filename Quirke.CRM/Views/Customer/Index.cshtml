@{
    ViewData["Title"] = "Clients";
}

<section class="content pt-3">
    <div class="container-fluid">
        <div class="card card-default color-palette-box">
            <div class="card-header">
                <h1 class="card-title">
                    @* <i class="fas fa-tag"></i> *@
                    <b>Client List</b>
                </h1>
                <a class="btn btn-primary  btn-sm float-right" href="@Url.Action("Manage","Customer")"><i class="fas fa-plus"></i> Add Client</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="customersTable" class="table table-striped table-bordered" style="width:100%">
                        <thead class="thead-dark">
                            <tr>
                                <th>Sr No.</th>
                                <th>First name</th>
                                <th>Last name</th>
                                <th>Birth Date</th>
                                <th>Gender</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Registered Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

<script src="~/lib/jquery/jquery.min.js"></script>
<script type="text/javascript">

    var dtTable;
    $(document).ready(function () {

        funCustomerGrid();

        $(window).resize(() => {
            setTimeout(function () {
                $($.fn.dataTable.tables(true)).DataTable().columns.adjust();
            }, 200);
        });
    });

    function funCustomerGrid(){
        if (dtTable) {
            dtTable.destroy();
        };
        dtTable = $('#customersTable').DataTable({
            "processing": true,
            "serverSide": false,
            "ajax": {
                "url": "@Url.Action("GetCustomers", "Customer")",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                {
                    "data": null,
                    "className": "text-center noExport",
                    "render": function (data, type, full, meta) {
                        return meta.row + 1; 
                    }
                },
                { "data": "Firstname" },
                { "data": "Lastname" },
                { "data": "DispBirtDate" },
                { "data": "Gender" },
                { "data": "Mobile" },
                { "data": "Email" },
                { "data": "DispCreatedOn" },
                {
                    "render": function (data, type, full, meta) {
                        var _html = '';
                        _html += '<a class="btn btn-secondary  btn-sm mr-2" href="/customer/manage/' + full.Id + '"><i class="fas fa-pen"></i> Edit</a>';
                        _html += '<button class="btn btn-danger  btn-sm" onclick="funDeleteCustomer(' + full.Id + ')"><i class="fas fa-trash"></i> Delete</button>';
                        return _html;
                    }
                }
            ],
            fixedHeader: true,
            responsive: true,
            scrollCollapse: true,
            scrollY: '50vh',
            scrollX: true,
            deferRender: true,
            scroller: true,
            autoWidth: true,
            layout: {
                topStart: {
                    buttons: [
                        {
                            extend: 'excel',
                            className: 'btn btn-outline-dark btn-sm',
                            exportOptions: {
                                columns: ':not(:last-child)' // Exclude the last column (actions) from the export
                            }
                        },
                        {
                            extend: 'pdf',
                            className: 'btn btn-outline-dark btn-sm',
                            exportOptions: {
                                columns: ':not(:last-child)' // Exclude the last column (actions) from the export
                            }
                        }
                    ]
                },
                bottom: ['paging'],
                bottomStart: null,
                bottomEnd: null,
            }
        });
    }


    function funDeleteCustomer(_id) {

        $.ajax({
            url: '@Url.Action("DeleteCustomer", "Customer")',
            type: 'GET',
            dataType: 'json',
            data: {
                id: _id,
            },
            success: function (response) {
                if (response.result) {
                    funCustomerGrid();
                    Swal.fire({
                        title: 'Success!',
                        text: response.msg,
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
                }
            },
            error: function (response) {

            }
        });
    }
</script>
