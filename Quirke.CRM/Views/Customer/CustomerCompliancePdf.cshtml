@model CustomerViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Compliance</title>
    <link href="~/quirke/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/quirke/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Arial', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #f5f5f5;
            font-family: 'Arial', sans-serif;
            padding: 0;
            margin: 0;
            width: 100%;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            background-color: #333;
            color: #fff;
            border-bottom: none;
        }

        .btn-primary {
            background-color: #333;
            border: none;
        }

            .btn-primary:hover {
                background-color: #555;
            }

        .form-label {
            font-weight: bold;
        }

        .logo {
            max-width: 100%;
            height: auto;
            /*  margin-bottom: 20px; */
        }

        .form-check-label {
            font-weight: 700 !important;
        }

        .content {
            padding-top: 50px;
        }

        .signature-canvas {
            border: 1px solid black;
            width: 100%;
            height: auto;
        }

        .custom-radio-as-checkbox label {
            cursor: pointer;
            user-select: none;
        }

        .custom-radio-as-checkbox input[type="radio"] {
            display: none;
        }

        .custom-radio-as-checkbox label::before {
            content: "\f00c";
            display: inline-block;
            width: 20px;
            height: 20px;
            /* border: 2px solid #007bff; */
            background-color: #fff;
            /* border-radius: 4px; */
            margin-right: 10px;
            vertical-align: middle;
            transition: background-color 0.3s, border-color 0.3s;
            font-family: "Font Awesome 5 Free";
            font-weight: 900;
            font-size: 20px;
            line-height: 18px;
            text-align: center;
            color: transparent;
            border: 2px solid #D3CFC8;
        }

        .custom-radio-as-checkbox input[type="radio"]:checked + label::before {
            /*  background-color: #007bff; */
            border-color: #007bff;
            color: #000;
        }
    </style>
</head>

<body class="bg-light d-flex align-items-center justify-content-center" style="min-height: 100vh;">

    <div class="container">
        <section class="content">
            <div class="container-fluid">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <div class="text-center">
                            @* <img src="../quirke/img/quirke_logo.png" alt="Quirke & Co Hairdressers Logo" class="logo img-fluid"> *@
                            <h1>Quirke & Co Hairdressers Logo</h1>
                            <br />
                            <small style="font-size:0.60em;color:#adad9f;">72 Taff Street, Pontypridd, CF37 4SU, t.01443 401 012</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <form asp-action="ComplianceSubmit" method="post" id="complianceForm">
                        <table class="table mb-3" width="100%">
                            <tr>
                                <td width="40%"><strong>Client Name:</strong> @Model.Compliance.Firstname @Model.Compliance.Lastname</td>
                                <td width="30%"> <strong>Birth Date:</strong> @Model.Compliance.BirthDate?.ToString("dd MMM yyyy")</td>
                                <td width="30%"><strong>Mobile:</strong> @Model.Compliance.Mobile</td>
                            </tr>
                        </table>
                        <table class="table mb-3">
                            <tbody>
                                <tr id="isOver16Row">
                                    <td style="width:70%" class="pull-left">
                                        <label class="form-check-label" asp-for="Compliance.IsOver16" style="font-weight: 700 !important;"></label>
                                    </td>
                                    <td style="width:30%">
                                        <div class="d-inline custom-radio-as-checkbox">
