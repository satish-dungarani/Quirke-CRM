                                            <input type="radio" class="form-check-input" asp-for="Compliance.IsOver16" value="false" id="noOver16" />
                                            <label class="form-check-label mr-2" for="noOver16">No</label>
                                        </div>
                                        <span asp-validation-for="Compliance.IsOver16" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr></tr>
                                <tr>
                                    <td style="width:70%">
                                        <label class="form-check-label" asp-for="Compliance.IsIdentityProvided" style="font-weight: 700 !important;"></label>
                                    </td>
                                    <td style="width:30%">
                                        <div class="d-inline custom-radio-as-checkbox">
