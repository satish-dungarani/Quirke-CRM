                                        <span asp-validation-for="Compliance.AllergicProductDetails" class="text-danger"></span>
                                    </td>
                                </tr>


                                <!-- observed -->
                                <tr>
                                    <td colspan="2">
                                        <label class="form-check-label" asp-for="Compliance.ObservedBy" style="font-weight: 700 !important;"></label>
                                        <textarea asp-for="Compliance.ObservedBy" class="form-control"></textarea>
                                    </td>
                                </tr>
                                <tr></tr>
                                <!-- Allergy -->
                                <tr>
                                    <td style="width:70%">
                                        <label class="form-check-label" asp-for="Compliance.IsAllergyTestDone" style="font-weight: 700 !important;"></label>
                                    </td>
                                    <td style="width:30%">
                                        <div class="d-inline custom-radio-as-checkbox">
                                            <input type="radio" class="form-check-input" asp-for="Compliance.IsAllergyTestDone" value="true" id="yesIsAllergyTestDone" />
                                            <label class="form-check-label mr-2" for="yesIsAllergyTestDone">Yes</label>
                                        </div>
                                        <div class="d-inline custom-radio-as-checkbox">
                                            <input type="radio" class="form-check-input" asp-for="Compliance.IsAllergyTestDone" value="false" id="noIsAllergyTestDone" />
                                            <label class="form-check-label mr-2" for="noIsAllergyTestDone">No</label>
