                        <table class="table mb-3" width="100%">
                            <tbody>
                                <tr>
                                    <td><label class="form-check-label" asp-for="Compliance.SignatureData" style="font-weight: 700 !important;"></label></td>
                                    <td><label class="form-check-label" asp-for="Compliance.SalonSignatureData" style="font-weight: 700 !important;"></label></td>
                                </tr>
                                <tr>
                                    <td width="50%">
                                        <img class="w-100" style="max-width: 350px; height: auto;" id="savetarget" src="@Model.Compliance.SignatureData"><br>
                                    </td>
                                    <td width="50%">
                                        <img class="w-100" style="max-width: 350px; height: auto;" id="salonsavetarget" src="@Model.Compliance.SalonSignatureData"><br>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </section>
    </div>

    <script>
        $(document).ready(function () {
            function calculateAge(birthDate) {
                const today = new Date();
                const birthDateObj = new Date(birthDate);
                let age = today.getFullYear() - birthDateObj.getFullYear();
                const monthDiff = today.getMonth() - birthDateObj.getMonth();

                if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDateObj.getDate())) {
                    age--;
                }

                return age;
            }
        });
    </script>
</body>
</html>
