                                            <label class="form-check-label mr-2" for="yesIsIdentityProvided">Yes</label>
                                        </div>
                                        <div class="d-inline custom-radio-as-checkbox">
                                            <input type="radio" class="form-check-input" asp-for="Compliance.IsIdentityProvided" value="false" id="noIsIdentityProvided" />
                                            <label class="form-check-label mr-2" for="noIsIdentityProvided">No</label>
                                        </div>
                                        <span asp-validation-for="Compliance.IsIdentityProvided" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr></tr>
