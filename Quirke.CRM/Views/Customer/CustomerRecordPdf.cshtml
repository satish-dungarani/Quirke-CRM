@model CustomerViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Record Card</title>
    <style>
        /* Reset margins and padding */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: cursive;
            color: #000;
            padding: 0;
            margin: 0;
            width: 100%;
        }

        .record-card {
            background-color: #fcd5ce;
            padding: 20px;
            border: 1px solid #000;
            margin: 0;
            width: 100%;
            height: 100%;
        }

        .header {
            margin-bottom: 20px;
            text-align: center;
        }

            .header h1 {
                font-size: 24px;
               /*  text-transform: uppercase; */
                font-weight: bold;
                color: #000;
                margin-bottom: 10px;
            }


        .record-table {
            width: 100%;
            margin-bottom: 20px;
            /* background-color: #f5f5f5; */
        }

            .record-table th, .record-table td {
                padding: 10px;
                text-align: left;
                font-size: 13px;
            }

            .record-table th {
                font-weight: bold;
            }

            .record-table td {
                text-decoration: underline;
            }

        .section-title {
            margin: 20px 0 10px;
            font-size: 18px;
            font-weight: bold;
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div class="record-card">
        <div class="header">
            <h1>Customer Record Card</h1>
        </div>
        <table style="width:100%;border:none;margin-bottom: 20px;">
            <tr>
                <td width="50%"><strong>Name:</strong> @Model.Customer.Firstname @Model.Customer.Lastname</td>
                <td width="30%"><strong>Mobile:</strong> @Model.Customer.Mobile</td>
                <td width="20%"><strong>D.O.B:</strong> @Model.Customer.BirtDate?.ToString("dd MMM yyyy")</td>
            </tr>
        </table>
        <div style="border:dotted;border-radius:1px;background:#fff">
            <table class="record-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Brand</th>
                        <th>Strength</th>
                        <th>Dev. Time</th>
                        <th>Treatment</th>
                        <th>Attendee</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.CustomerRecords)
                    {
                        <tr>
                            <td>@record.DispServiceDate</td>
                            <td>@record.ProductName</td>
                            <td>@record.Strength</td>
                            <td>@record.DevTime</td>
                            <td>@record.TreatmentName</td>
                            <td>@record.AttendedEmployeeName</td>
                            <td>@record.Remark</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
